<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:padding="16dp">

    <TextView
            android:text="title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/titleText"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bodyText" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toEndOf="@+id/deleteButton" android:layout_marginStart="16dp"
            android:textStyle="bold"/>
    <TextView
            android:text="body"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/bodyText"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/titleText" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/titleText" android:maxLines="2"/>
    <Button
            android:text="D"
            android:layout_width="30dp"
            android:layout_height="50dp" android:id="@+id/deleteButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/titleText"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.492" android:textColor="@color/white" android:textSize="14sp"
            android:padding="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>